<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="0.7"
            android:gravity="bottom"
            android:orientation="vertical"
            android:weightSum="6">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/client_"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/profile_photo_black_layer"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/termAndCondition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center"
                            android:text="Payment Details"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_22ssp" />

                        <RatingBar
                            android:id="@+id/ratingBar1"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:numStars="5"
                            android:rating="4" />

                        <TextView
                            android:id="@+id/viewFullProfile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center"
                            android:text="View Full Profile"
                            android:textColor="#FE7548"
                            android:textSize="@dimen/_12ssp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="bottom|center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/edit"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/edit_ic" />

                        <LinearLayout
                            android:id="@+id/message"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/client_list_message_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:background="@drawable/msg_white_ic" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="1.3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@drawable/white_bg_with_border_line"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="About You"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_15ssp" />


                    <TextView
                        android:id="@+id/fullBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="View Full Profile"
                        android:textColor="#FE7548"
                        android:textSize="@dimen/_15ssp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/aboutYou"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:text="Sed non ipsum sed odi non ipsuon ipsum sed odi non ipsuon ipsum sed odi non ipsuon ipsum sed odi non ipsuon ipsum sed odi non ipsuon ipsum sed odi non ipsuon ipsum sed odi non ipsuon ipsum sed odi non ipsuon ipsum sed odi non ipsuon ipsum sed odi non ipsum sed odi non ipsum sed odi non ipsum sed odi non ipsum sed odi non ipsum sed odi non ipsum sed odi non ipsum sed odi non ipsum sed odio fringilla scelerisque. AenSed non ipsum sed odio fringilla scelerisque. AenSed non ipsum sed odio fringilla scelerisque. AenSed non ipsum sed odio fringilla scelerisque. AenSed non ipsum sed odio fringilla scelerisque. AenSed non ipsum sed odio fringilla scelerisque. AenSed non ipsum sed odio fringilla scelerisque. AenSed non ipsum sed odio fringilla scelerisque. AenSed non ipsum sed odio fringilla scelerisque. Aenean accumsan massa maximus mi scelerisque fringilla. Mauris eu commodo tortor"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_13ssp">

                </TextView>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>