<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ReportIssueActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_weight="0.1"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/back_arrow" />

        </LinearLayout>

        <TextView
            android:id="@+id/termAndCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Report Issues"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_22ssp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Report Issues With App"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12ssp"/>

        <EditText
            android:id="@+id/reportAppIssue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="top"
            android:imeOptions="actionNext"
            android:hint="Write here"
            android:inputType="text"
            android:maxLines="20"
            android:textSize="@dimen/_11ssp">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Report Term &amp; violators"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12ssp"/>

        <EditText
            android:id="@+id/reportViolators"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="top"
            android:hint="Write here"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:maxLines="20"
            android:textSize="@dimen/_11ssp"/>

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/accept_btn_bg"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Submit"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_11ssp"/>


    </LinearLayout>

</layout>