<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PersonalDetailActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="0.1"
                        android:padding="5dp"
                        android:src="@mipmap/back_arrow" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center">

                        <View
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:background="@mipmap/tram_black_circle"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@mipmap/tram_black_line"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center">

                        <View
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:background="@mipmap/tram_grey_circle"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@mipmap/tram_grey_line"></View>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center">

                        <View
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:background="@mipmap/tram_grey_circle"></View>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/termAndCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:text="Personal Detail"
                    android:textColor="@color/textColor"
                    android:textSize="25dp"/>


                <LinearLayout
                    android:id="@+id/addPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="202dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/persone_detail_gray_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/default_pic"></ImageView>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:gravity="center"
                        android:text="Tap here to add your Photo"
                        android:textColor="@color/text_gray"
                        android:textSize="14dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="27dp"
                    android:text="Full Name"
                    android:textColor="@color/textColor"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"
                    android:hint="Full Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="20">

                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="27dp"
                    android:text="Email"
                    android:textColor="@color/textColor"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"
                    android:hint="Email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="20"></EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="27dp"
                    android:text="Mobile"
                    android:textColor="@color/textColor"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"
                    android:hint="Mobile"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="20"></EditText>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="27dp"
                    android:textColor="@color/textColor"
                    android:textSize="14dp"/>


                <LinearLayout
                    android:id="@+id/selectGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="15dp"
                            android:hint="Select Gender"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="20"/>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="center|right"
                            android:background="@mipmap/textfield_dropdown"/>
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="27dp"
                    android:text="Age"
                    android:textColor="@color/textColor"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="15dp"
                    android:hint="Age"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="20"></EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="27dp"
                    android:text="City"
                    android:textColor="@color/textColor"
                    android:textSize="14dp"/>


                <LinearLayout
                    android:id="@+id/selectCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="15dp"
                            android:focusable="false"
                            android:hint="City"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLines="20"/>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="center|right"
                            android:background="@mipmap/textfield_dropdown"/>
                    </FrameLayout>
                </LinearLayout>


                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/accept_btn_bg"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Next"
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>