<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.BeginScreenActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:background="@mipmap/i_am_trainer"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/trainerBSA"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="55dp"
                android:gravity="right"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:background="@drawable/button_white_rounded"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textSize="22dp"
                    android:gravity="left|center"
                    android:textColor="@color/buttonTextColor"
                    android:text="@string/i_am_trainer">

                </TextView>
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/trainer_arrow_black">
                </View>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:background="@mipmap/i_am_client"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/clientBSA"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="55dp"
                android:gravity="right"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:background="@drawable/button_white_rounded"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textSize="22dp"
                    android:gravity="left|center"
                    android:textColor="@color/buttonTextColor"
                    android:text="@string/i_am_client">
                </TextView>
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/trainer_arrow_black">
                </View>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>